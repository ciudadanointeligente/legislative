!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Cabildo Abierto"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css" rel="stylesheet" type="text/css")
    %link(href="images/favicon.ico" rel="shortcut icon")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") Cabildo Abierto
          .container.nav-collapse
            %ul.nav
              %li= link_to t('layout.home'), '/'
              %li= link_to t('layout.advanced_search'), '/advanced_search/'
              %li= link_to t('layout.glossary'), '/glossary/'
              %li= link_to t('layout.about_us'), 'http://www.ciudadanointeligente.org/quienes-somos/'

    .container

      .content
        .row
          .span9
            = render 'layouts/messages'
            = yield
          .span3
    
      %footer
        %a{:href => "http://creativecommons.org/licenses/by/3.0/deed.es", :rel => "license"}
          %img{:alt => "Licencia Creative Commons", :src => "http://i.creativecommons.org/l/by/3.0/80x15.png", :style => "border-width:0"}
        = "Esta obra está bajo una"
        %a{:href => "http://creativecommons.org/licenses/by/3.0/deed.es", :rel => "license"} Licencia Creative Commons Atribución 3.0 Unported
        %p +562 24192770 | Holanda 895, Providencia, Santiago | (cc) Fundación Ciudadano Inteligente 2013
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"

